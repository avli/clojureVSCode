{
    "name": "clojure",
    "displayName": "Clojure",
    "description": "Clojure nREPL support for Visual Studio Code",
    "version": "0.9.1",
    "publisher": "avli",
    "author": {
        "name": "Andrey Lisin",
        "email": "andrey.lisin@gmail.com"
    },
    "contributors": [
