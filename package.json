            "email": "barakliato@gmail.com"
        }
    ],
    "license": "MIT",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages",
        "Other"
    ],
    "activationEvents": [
        "onCommand:clojureVSCode.startNRepl",
        "onCommand:clojureVSCode.manuallyConnectToNRepl"
    ],
    "main": "./out/src/clojureMain",
    "contributes": {
        "commands": [
            {
                "command": "clojureVSCode.eval",
                "title": "Clojure: Eval"
            },
            {
                "command": "clojureVSCode.evalAndShowResult",
                "title": "Clojure: Eval and show the result"
            },
            {
                "command": "clojureVSCode.manuallyConnectToNRepl",
                "title": "Clojure: Connect to a running nREPL"
            },
            {
                "command": "clojureVSCode.startNRepl",
                "title": "Clojure: Start nREPL"
            },
            {
                "command": "clojureVSCode.stopDisconnectNRepl",
                "title": "Clojure: Stop/disconnect nREPL"
            },
            {
                "command": "clojureVSCode.formatFile",
                "title": "Clojure: Format file or selection"
            },
            {
                "command": "clojureVSCode.reloadNamespace",
                "title": "reload the current namespace"
            },
            {
                "command": "clojureVSCode.searchSymbol",
                "title": "Try to find the symbol and add its namespace to the decleration"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Clojure extension configuration",
            "properties": {
                "clojureVSCode.autoStartNRepl": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically run an embedded nREPL instance and connect to it on Clojure file open."
                },
                "clojureVSCode.formatOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Format the code on save."
                },
                "clojureVSCode.alertOnEval": {
                    "type": "boolean",
                    "default": true,
                    "description": "show pop up alert on eval."
                },
                "clojureVSCode.autoReloadNamespaceOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "auto reload the file upon save."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/jszip": "^0.0.31",
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.85",
        "mocha": "^2.3.3",
        "typescript": "^2.4.2",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "bencoder": "^0.0.5",
        "cross-spawn": "^5.1.0",
        "jszip": "^3.1.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/avli/clojureVSCode"
    }
}
